programa
{
	inclua biblioteca Util --> u
//Frases e Variaveis GERAL

	const inteiro VidaMax = 7
	const cadeia Gato = "	      ▄▀▄     ▄▀▄\n	     ▄█  ▀▀▀▀▀  █▄\n	 ▄▄  █           █  ▄▄\n	█▄▄█ █  ▀  ┬  ▀  █ █▄▄█\n\n"
	const cadeia CmdFail = "Comando citado não existe, tente novamente\n"
	const cadeia Entrada = "Você entrou n", Foi = "Você foi para ", Faz = "\n\n\n Escolha algo para fazer\n"
	const cadeia Dano = "Você se machucou.", Conheceu = "Você conheceu "
	const cadeia FazMais = "Voce quer fazer mais alguma coisa?\n\n"
	const cadeia Historia = "Cerveja, um gato perdido em uma cidade desconhecida, enfrenta solidão e perigos nas ruas.\nEle percorre ruas movimentadas, becos sombrios e terrenos acidentados, lutando contra a fome e a sede.\nSeu pelo está emaranhado e suas patas machucadas, mas ele persiste em sua busca por um lar.\nCerveja cruza com pessoas indiferentes que o ignoram, aumentando sua sensação de desamparo.\nNo entanto, em meio a sua angústia, Cerveja mantém a esperança\nde reencontrar sua família e sentir novamente o aconchego do lar.\n\n"
		
	inteiro Vida = 7
	inteiro Personagens = 0
	inteiro Sorteia
	inteiro VidaCachorro = 4
	
	funcao inicio()
	{
		
		
		
		
		//Inicio do codigo//
		escreva(Gato, Historia)
		u.aguarde(5000)
			escreva("\n\nEscolha um local para ir:\n")
		const cadeia LocaisCidade = "\n1:Casa\n2:Praça\n3:Mercado\n0:Sair\nEscolha: "
		enquanto(Vida > 0){
		escreva(LocaisCidade)
		inteiro Local
		leia(Local)
		limpa()
	se(Local != 0){
		enquanto(Local != 1 e Local != 2 e Local !=3){

			
				escreva(CmdFail)
				escreva(LocaisCidade)
				leia(Local)
				limpa()
			}
		escolha(Local){
			
			caso 1:
				Casa()
					pare
			caso 2:
				Praca()
				pare
			caso 3:
				Mercado()
					pare
		}
			}
			escreva(FazMais, LocaisCidade)
			leia(Local)
	}VidaGato()
		}
		
	funcao VidaGato()
		{
		se(Vida > VidaMax){
			Vida = 7
		}
		
		se(Vida == 7){
			escreva("Vida: 		♡ ♡ ♡ ♡ ♡ ♡ ♡\n")
		}
		se(Vida == 6){
			escreva("Vida: 		♡ ♡ ♡ ♡ ♡ ♡\n")
		}
		se(Vida == 5){
			escreva("Vida:		♡ ♡ ♡ ♡ ♡\n")
		}
		se(Vida == 4){
			escreva("Vida:		♡ ♡ ♡ ♡\n")
		}
		se(Vida == 3){
			escreva("Vida:		♡ ♡ ♡\n")
		}
		se(Vida == 2){
			escreva("Vida:		♡ ♡\n")
		}
		se(Vida ==1){
			escreva("Vida:		♡\n")
		}
		se(Vida <= 0){
			limpa()
			escreva("Suas vidas acabaram\n")
			escreva("Personagems encontrados: ", Personagens)
		}
		}

		funcao Casa(){
			escreva("\n\n", Entrada, "a casa\n")
			escreva(Faz)
			const cadeia OqFazCasa = "1:Ir para o quintal\n2:Visitar quartos\n3:Ver cozinha\n0:Sair\n\nEscolha: "
			escreva(OqFazCasa)
			inteiro FazCasa
			leia(FazCasa)
			limpa()
			enquanto(FazCasa != 0){
				enquanto(FazCasa != 1 e FazCasa != 2 e FazCasa != 3){
					escreva(CmdFail)
					u.aguarde(1000)
					escreva(OqFazCasa)
					leia(FazCasa)}
				se(FazCasa == 1){
				Sorteia = u.sorteia(1, 2)
				 se(Sorteia == 1){
				 	escreva("Você foi atacado pelo cachorro.\n",Dano,"\n")
				 	Vida = Vida - 2
				 	VidaGato()
				 }se(Sorteia == 2){
				 	escreva(Conheceu, "Rufus, o cachorro")
				 	Personagens++
				 }
					
				}se(FazCasa == 2){
					Sorteia = u.sorteia(1, 2)
					se(Sorteia == 1){
						escreva("A casa esta vazia e você foi embora\n\n")
					}se(Sorteia == 2){
						escreva(Conheceu, "Jefferson, um humano\n\n")
						Personagens++
					}
				}se(FazCasa == 3){
					Sorteia = u.sorteia(1, 2)
					se(Sorteia == 1){
						escreva("Você bebeu um pouco de água e saiu\n\n")
						Vida = Vida + 1
						VidaGato()
					}se(Sorteia == 2){
						escreva(Conheceu, "Luciano, un humanito.\n\n")
						Personagens++
					}
				}
				escreva(FazMais)
				escreva(OqFazCasa)
				leia(FazCasa)
			}
			
			
		}
		
			
		funcao Praca(){
			escreva("\n\n", Foi, "a praça\n")
				escreva(Gato)
				escreva(Faz)
				const cadeia OqFazPraca = "1:Brincar na areia\n2:Brincar no parquinho\n3:Ir para a floresta (Essa entrada não tem volta!) \n0:Sair\n\nEscolha: "
				escreva(OqFazPraca)
				inteiro FazPraca
				leia(FazPraca)
				limpa()
				se(FazPraca != 0){
					enquanto(FazPraca != 1 e FazPraca != 2 e FazPraca != 3){
						escreva(CmdFail)
						u.aguarde(1000)
						leia(FazPraca)
						limpa()
					}
					se(FazPraca == 1){
						Sorteia = u.sorteia(1, 2)
						se(Sorteia == 1){
							escreva("Tinha vidro na areia. ",Dano)
							Vida = Vida - 1
							VidaGato()
						}se(Sorteia == 2){	
							escreva(Conheceu, "Luca, a criança")
							Personagens++
						}
						}
					se(FazPraca == 2){
						Sorteia = u.sorteia(1, 2)
						
						se(Sorteia == 1){
							escreva("Você estava brincando quando caiu do escorregador. ")
							escreva(Dano)
							Vida = Vida - 1
							VidaGato()
						}se(Sorteia == 2){
							escreva("Você estava brincando quando você avista alguem.", Conheceu, "Furico, o gato.")
							Personagens++
						}
					}
					se(FazPraca == 3){
						Batalha()
					}
				}
		}
		funcao Mercado(){
			escreva("\n\n", Entrada, "o mercado\n")
				escreva(Gato)
				escreva(Faz)
				const cadeia OqFazMercado = "1:Setor de Carnes\n2:Setor de Animais\n3:Setor de Peixes\n0:Sair\n\nEscolha:"
				escreva(OqFazMercado)
				inteiro FazMercado
				leia(FazMercado)
				limpa()
				se(FazMercado != 0){
					enquanto(FazMercado != 1 e FazMercado != 2 e FazMercado != 3){
					escreva(CmdFail)
						u.aguarde(1000)
						leia(FazMercado)
						limpa()
				}
				se(FazMercado == 1){
					
				}
				se(FazMercado == 2){
					
				}
				se(FazMercado == 3){
					
				}
		}
				}
		funcao Batalha(){
			cadeia Cao = " ╭━━╮╭━━╮\n ┃╭╮┗┻━━┻━╮\n ┃╰┓╭━╮╭━╮┃\n ╰━┓┃▇┃┃▇┃┃\n   ┃╱▔▔▔▔▔▔▔▇\n   ┃▏┏┳┳┳┳┳━┛\n   ┃╲╰┻┻┻┻┻┓\n\n"
			escreva(Cao, "Esse é Clark, o cachorro novo de sua antiga familia.\nEle não gosta de gatos.")
			u.aguarde(5000)
			enquanto(VidaCachorro > 0){
				inteiro Opcao
				inteiro Chance = u.sorteia(1,2)
				escreva("\n\nEscolha um ataque:\n[1] Arranhar	[2] Morder\n\n")
				leia(Opcao)

				se(Opcao == Chance e Opcao == 1){
					escreva("Você arranhou Clark.\n")
					VidaCachorro = VidaCachorro - 1
					VidaCao()
					u.aguarde(5000)
					limpa()
				}
				se(Opcao != Chance e Opcao == 1){
					escreva("Clark te arranhou.\n")
					Vida = Vida - 1
					VidaGato()
					u.aguarde(5000)
					limpa()
				}
				se(Opcao == Chance e Opcao == 2){
					escreva("Você mordeu Clark.\n")
					VidaCachorro = VidaCachorro - 2
					VidaCao()
					u.aguarde(5000)
					limpa()
				}
				se(Opcao != Chance e Opcao == 2){
					escreva("Clark te mordeu.\n")
					Vida = Vida - 2
					VidaGato()
					u.aguarde(5000)
					limpa()
			}
			}
		}
		funcao VidaCao(){
			se(VidaCachorro == 4){
				escreva("Vida Clark: ▇▇▇▇▇▇▇▇ ")
			}
			
			se(VidaCachorro == 3){
				escreva("Vida Clark: ▇▇▇▇▇▇ ")
			}
			
			se(VidaCachorro == 2){
				escreva("Vida Clark: ▇▇▇▇ ")
			}
			
			se(VidaCachorro == 1){
				escreva("Vida Clark: ▇▇ ")
			}
			se(VidaCachorro <= 0){
				escreva("VOCÊ VENCEU\n\n		FIM	\nPersonagens encontrados: ", Personagens)
				escreva("\n\nCreditos")
			}
		}
				
	}
