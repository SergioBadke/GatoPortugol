programa
{
	
	funcao inicio()
	{
		
		cadeia Gato = "      ▄▀▄     ▄▀▄\n     ▄█  ▀▀▀▀▀  █▄\n ▄▄  █           █  ▄▄\n█▄▄█ █  ▀  ┬  ▀  █ █▄▄█"
		cadeia CmdFail = "Comando citado não existe, tente novamente\n"
		cadeia Entrada = "Você entrou n", Foi = "Você foi para ", Dano = "Você sofreu um dano."
		inteiro Local
		
		escreva("\n\n",Gato,"\nEscolha um local para ir:\n")
		cadeia LocaisCidade = "\n1:Casa\n2:Praça\n3:Mercado\n\nEscolha: "
		escreva(LocaisCidade)
		leia(Local)
		enquanto(Local != 1 e Local != 2 e Local !=3){
				escreva(CmdFail)
				escreva(LocaisCidade)
				leia(Local)
			}
		escolha(Local){
			
			caso 1:
			escreva("\n\n", Entrada, "a casa\n")
			escreva(Gato)
			escreva("\n\n\n Escolha algo para fazer\n")
			cadeia OqFazCasa = "1:Ir para o quintal\n2:Visitar quartos\n3:Ver cozinha\n\nEscolha: "
			escreva(OqFazCasa)
			inteiro FazCasa
			leia(FazCasa)
			enquanto(FazCasa != 1 e FazCasa != 2 e FazCasa != 3){
					escreva(CmdFail)
					escreva(OqFazCasa)
					leia(FazCasa)}
				se(FazCasa == 1){
					escreva("Você foi atacado por um cachorro.\n",Dano,"\n")
					
				}se(FazCasa == 2){
				escreva("A casa esta vazia e você foi embora\n\n")
				}se(FazCasa == 3){
				escreva("Você bebeu um pouco de água e saiu\n\n")
				}
					pare
				caso 2:
				escreva("\n\n", Foi, "a praça")
				pare
				caso 3:
				escreva("\n\n", Entrada, "o mercado")
					pare
			}
				}
				
		
			
		
			funcao VidaGato()
		{
		inteiro Vida = 7
		
		se(Vida == 7){
			escreva("	Vida: 		♡ ♡ ♡ ♡ ♡ ♡ ♡")
		}
		se(Vida == 6){
			escreva("	Vida: 		♡ ♡ ♡ ♡ ♡ ♡")
		}
		se(Vida == 5){
			escreva("	Vida:		♡ ♡ ♡ ♡ ♡")
		}
		se(Vida == 4){
			escreva("	Vida:		♡ ♡ ♡ ♡")
		}
		se(Vida == 3){
			escreva("	Vida:		♡ ♡ ♡")
		}
		se(Vida == 2){
			escreva("	Vida:		♡ ♡")
		}
		se(Vida ==1){
			escreva("	Vida:		♡")
		}
		se(Vida <= 0){
			escreva(" Suas vidas acabaram")
		}
		}
	
}
